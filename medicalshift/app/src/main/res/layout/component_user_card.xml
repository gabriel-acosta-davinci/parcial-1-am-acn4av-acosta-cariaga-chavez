<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/userCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_user_card"
    android:padding="24dp"
    android:elevation="4dp">

    <!-- Título arriba a la izquierda -->
    <TextView
        android:id="@+id/cardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gabriel Hernán Acosta"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/sky_600"
        android:fontFamily="@font/inter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="8dp"/>

    <!-- Bloque de datos a la izquierda -->
    <LinearLayout
        android:id="@+id/cardDataBlock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/cardTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cardLogo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp">

        <!-- Asociado -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="24dp">

            <TextView
                android:id="@+id/cardAsociadoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asociado Nº"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:fontFamily="@font/inter"/>

            <TextView
                android:id="@+id/cardAsociadoValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45136715"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:fontFamily="@font/inter"/>
        </LinearLayout>

        <!-- Token -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cardTokenLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Token"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:fontFamily="@font/inter"/>

            <TextView
                android:id="@+id/cardTokenValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="727"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:fontFamily="@font/inter"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Logo a la derecha -->
    <ImageView
        android:id="@+id/cardLogo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/logo"
        android:contentDescription="Logo Medicalshift"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
